@model IEnumerable<FinancialPlanner.Models.Transaction>


<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        Transactions for @ViewBag.Account Account at @ViewBag.Bank
                    </h2>  
                    <small>@Html.ActionLink("Add Transaction", "Create", "Transactions", new { accountId = ViewBag.AccountId }, null)</small>
                </div>
                <div class="body table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Amount</th>
                                <th>Title</th>
                                <th>Memo</th>
                                <th>Created</th>
                                <th>Reconciled</th>
                                <th>Reconciled Amount</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => account.Amount)</td>
                                <td>@Html.DisplayFor(modelItem => account.Title)</td>
                                <td>@Html.DisplayFor(modelItem => account.Memo)</td>
                                <td>@Html.DisplayFor(modelItem => account.Created.ToString().Split()[0])</td>
                                <td>@Html.DisplayFor(modelItem => account.Reconciled)</td>
                                <td>@Html.DisplayFor(modelItem => account.ReconciledAmount)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = account.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = account.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = account.Id })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-actions no-color">
    @Html.ActionLink("Back to Accounts", "Index", "Accounts", new { bankId = ViewBag.bankId }, null)
</div>


