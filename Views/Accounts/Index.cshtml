@using FinancialPlanner.Models;
@model IEnumerable<FinancialPlanner.Models.Account>


<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        My @ViewBag.Bank Accounts
                    </h2>
                    <small>@Html.ActionLink("Add Account", "Create", "Accounts", new { bankId = ViewBag.BankId }, null)</small>
                </div>
                <div class="body table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Current Balance</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => account.Name)</td>
                                <td>@Html.DisplayFor(modelItem => account.AccountType.Type)</td>
                                <td>@Html.DisplayFor(modelItem => account.CurrentBalance)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = account.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = account.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = account.Id }) |
                                    @Html.ActionLink("Add Transaction", "Create", "Transactions", new { accountId = account.Id }, null) |
                                    @Html.ActionLink("View Transactions", "Index", "Transactions", new { accountId = account.Id }, null)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-actions no-color">
    @Html.ActionLink("Back to My Banks", "MyBanks", "Banks", new { houseId = ViewBag.HouseId }, null)
</div>






