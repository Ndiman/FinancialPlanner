@model FinancialPlanner.Models.Household
    <h2>Assign a new HOH</h2>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h4>
                        Your household has members in it! In order to leave, you must assign a new Head of Household
                    </h4>
                </div>
                <div class="body">
                    <form class="form-horizontal">
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label>Choose: </label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    @Html.DropDownList("Members", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                <button type="button" class="btn bg-yellow m-t-15 waves-effect">ASSIGN</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

